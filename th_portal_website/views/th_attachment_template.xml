<odoo>
    <template id="download_form_page" name="">
        <t t-call="website.layout">
            <div class="container mt-5">
                <form method="POST" t-att-action="action" class="mb-4">
<!--                    action="/application_forms"-->
                    <div class="row">
                        <div class="col">
                            <h5 class=""><t t-esc="name_page"/></h5>
                        </div>
                        <div class="input-group col">
                            <input type="text" class="form-control" name="search" placeholder="Tìm kiếm..."
                                   t-att-value="search_query" onfocus="this.value=''"/>
                            <div class="">
                                <button class="btn btn-outline-secondary rounded-0" type="submit">Search</button>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <t t-foreach="attachments" t-as="attachment">
                        <div class="col-lg-12 col-md-12 mb-4">
                            <div class="card h-100">
                                <div class="card-body d-flex justify-content-between">
                                    <h6 class="card-title mt-auto"><t t-esc="attachment.name"/></h6>
                                    <div class="mt-auto">
                                        <a t-att-href="'/web/content/' + str(attachment.attachment_ids.id) + '?download=true'" t-att-download="attachment.name" class="btn btn-primary">
                                            Tải xuống
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>

