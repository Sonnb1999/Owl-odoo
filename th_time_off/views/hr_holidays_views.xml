<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="th_hr_leave_report_tree" model="ir.ui.view">
        <field name="name">th.report.hr.holidays.report.leave_all.tree</field>
        <field name="model">hr.leave.report</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_report_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='leave_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="leave_type"/>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='leave_type']" position="after">
                <field name="name"/>
            </xpath>
        </field>
    </record>

    <record id="hr_holidays.hr_employee_action_from_department" model="ir.actions.act_window">
        <field name="domain">[('department_id', '=', active_id)]</field>
    </record>

    <record id="hr_holidays.hr_leave_action_action_approve_department" model="ir.actions.act_window">
        <field name="domain">[('department_id', '=', active_id)]</field>
    </record>

    <record model="ir.ui.menu" id="hr_holidays.menu_hr_holidays_report">
        <field name="name">Time Off Analysis</field>
        <field name="groups_id" eval="[(6, 0, [ref('hr_holidays.group_hr_holidays_manager')])]"/>
    </record>
</odoo>
