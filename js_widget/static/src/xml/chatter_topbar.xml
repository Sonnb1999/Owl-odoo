<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ChatterTopbar" t-inherit="mail.ChatterTopbar" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o_ChatterTopbar_rightSection')]/child::*" position="before">
            <button class="btn btn-light o_ChatterTopbar_button" type="button"
                    t-on-click="chatterTopbar.chatter.onClickShowMessageSystem" title="Message system">
                <i class="fa fa-heart"/>
            </button>
        </xpath>
    </t>
</templates>
