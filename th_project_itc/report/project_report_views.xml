<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="th_view_project_task_pivot" model="ir.ui.view">
        <field name="name">project.task.pivot</field>
        <field name="model">th.project.task</field>
        <field name="arch" type="xml">
            <pivot string="Nhiệm vụ" sample="1" js_class="th_project_pivot">
<!--                <field name="th_project_team_ids" type="row"/>-->
                <field name="user_ids" type="row"/>
<!--                <field name="th_user_test_ids" type="row"/>-->
                <field name="project_id" type="col"/>
                <field name="stage_id" type="col"/>
                <field name="color" invisible="1"/>
                <field name="sequence" invisible="1"/>
            </pivot>
        </field>
    </record>

    <record id="th_view_project_task_pivot_user_test" model="ir.ui.view">
        <field name="name">project.task.pivot</field>
        <field name="model">th.project.task</field>
        <field name="arch" type="xml">
            <pivot string="Nhiệm vụ" sample="1" js_class="th_project_pivot">
<!--                <field name="th_project_team_ids" type="row"/>-->
<!--                <field name="user_ids" type="row"/>-->
                <field name="th_user_test_ids" type="row"/>
                <field name="project_id" type="col"/>
                <field name="stage_id" type="col"/>
                <field name="color" invisible="1"/>
                <field name="sequence" invisible="1"/>
            </pivot>
        </field>
    </record>

    <record id="view_task_project_user_search" model="ir.ui.view">
        <field name="name">report.project.task.user.search</field>
        <field name="model">th.project.task</field>
        <field name="arch" type="xml">
            <search string="Tasks Analysis">
                <field name="name" string="Task"/>
                <field name="tag_ids"/>
                <field name="user_ids" context="{'active_test': False}"/>
                <field name="project_id"/>
                <field name="milestone_id" groups="th_project_itc.th_group_project_milestone"/>
                <field name="ancestor_id" groups="th_project_itc.th_group_subtask_project"/>
                <field name="stage_id"/>
                <field name="partner_id" operator="child_of"/>
                <field name="active"/>
                <field name="rating_last_text"/>
                <field name="date_assign"/>
                <field name="date_end"/>
                <field name="date_deadline"/>
                <field name="date_last_stage_update"/>
                <filter string="Nhiệm vụ của tôi" name="my_tasks" domain="[('user_ids', 'in', uid)]"/>
                <filter string="Unassigned" name="unassigned" domain="[('user_ids', '=', False)]"/>
                <separator/>
                <filter string="Dự án của tôi" name="own_projects" domain="[('project_id.user_id', '=', uid)]"/>
                <filter string="Dự án yêu thích của tôi" name="my_favorite_projects" domain="[('project_id.favorite_user_ids', 'in', [uid])]"/>
                <separator/>
                <filter string="Ưu tiên cao" name="high_priority" domain="[('priority', '=', 1)]"/>
                <filter string="Ưu tiên thấp" name="low_priority" domain="[('priority', '=', 0)]"/>
                <separator/>
                <filter string="Mở" name="open_tasks" domain="[('is_closed', '=', False)]"/>
                <filter string="Đã đóng" name="closed_tasks" domain="[('is_closed', '=', True)]"/>
                <separator/>

                <filter string="Late Tasks" name="late" domain="[('date_deadline', '&lt;', context_today().strftime('%Y-%m-%d')), ('is_closed', '=', False)]"/>
                <filter name="rating_satisfied" string="Satisfied" domain="[('rating_avg', '&gt;=', 3.66)]" groups="th_project_itc.th_group_project_rating"/>
                <filter name="rating_okay" string="Okay" domain="[('rating_avg', '&lt;', 3.66), ('rating_avg', '&gt;=', 2.33)]" groups="th_project_itc.th_group_project_rating"/>
                <filter name="no_rating" string="No Rating" domain="[('rating_last_value', '=', 0)]" groups="th_project_itc.th_group_project_rating"/>
                <separator/>
                <filter name="filter_date_deadline" date="date_deadline"/>
                <filter name="filter_date_assign" date="date_assign"/>
                <filter name="filter_date_last_stage_update" date="date_last_stage_update"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Extended Filters">
                    <field name="priority"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </group>
                <group expand="1" string="Group By">
                    <filter string="Đội nhóm" name="th_project_team_ids" domain="[]" context="{'group_by': 'th_project_team_ids'}"/>
                    <filter string="Dự án" name="project_id" domain="[]" context="{'group_by': 'project_id'}"/>
                    <filter string="Giai đoạn" name="Stage" context="{'group_by': 'stage_id'}"/>
                    <filter string="Giai đoạn cá nhân" name="personal_stage" context="{'group_by': 'personal_stage_type_ids'}"/>
                    <filter string="Người được phân công" name="User" context="{'group_by': 'user_ids'}"/>
                    <filter string="Ancestor Task" name="groupby_ancestor_task" context="{'group_by': 'ancestor_id'}" groups="th_project_itc.th_group_subtask_project"/>
                    <filter string="Milestone" name="milestone" context="{'group_by': 'milestone_id'}" groups="th_project_itc.th_group_project_milestone"/>
                    <filter string="Khách hàng" name="Customer" context="{'group_by': 'partner_id'}"/>
                    <filter string="Deadline" name="deadline" context="{'group_by': 'date_deadline'}"/>
                    <filter string="Ngày tạo" name="group_create_date" context="{'group_by': 'create_date'}"/>
                    <filter string="Người kiểm thử" name="group_create_date" context="{'group_by': 'th_user_test_ids'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="th_action_project_task_user_report" model="ir.actions.act_window">
        <field name="name">Phân tích nhiệm vụ</field>
        <field name="res_model">th.project.task</field>
        <field name="view_mode">pivot,graph</field>
        <field name="search_view_id" ref="view_task_project_user_search"/>
        <field name="view_id" ref="th_view_project_task_pivot"/>
        <field name="context">{'group_by_no_leaf':1, 'group_by':[], 'graph_measure': '__count__'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No data yet!
            </p><p>
                Analyze the progress of your projects and the performance of your employees.
            </p>
        </field>
    </record>
    <record id="th_action_project_task_user_test_report" model="ir.actions.act_window">
        <field name="name">Phân tích nhiệm vụ</field>
        <field name="res_model">th.project.task</field>
        <field name="view_mode">pivot,graph</field>
        <field name="search_view_id" ref="view_task_project_user_search"/>
        <field name="view_id" ref="th_view_project_task_pivot_user_test"/>
        <field name="context">{'group_by_no_leaf':1, 'group_by':[], 'graph_measure': '__count__'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No data yet!
            </p><p>
                Analyze the progress of your projects and the performance of your employees.
            </p>
        </field>
    </record>

</odoo>
