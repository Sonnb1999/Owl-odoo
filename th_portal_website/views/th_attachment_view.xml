<odoo>

    <record id="th_attachment_view_tree" model="ir.ui.view">
        <field name="name">th_attachment_view_tree</field>
        <field name="model">th.attachment</field>
        <field name="arch" type="xml">
            <tree string="th_attachment_tree">
                <field name="name"/>
                <field name="attachment_ids"/>
            </tree>
        </field>
    </record>

    <record id="th_attachment_view_form" model="ir.ui.view">
        <field name="name">th_attachment_view_form</field>
        <field name="model">th.attachment</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button name="th_action_draft" string="Nháp" type="object" attrs="{'invisible': [('state', '=', 'draft')]}" class="btn"/>
                    <button name="th_action_accept" string="Chấp thuận" type="object" attrs="{'invisible': [('state', '=', 'accept')]}" class="btn btn-primary"/>
                    <button name="th_action_reject" string="Từ chối" type="object" attrs="{'invisible': [('state', '=', 'reject')]}" class="btn"/>
                    <field name="state" widget="statusbar"/>

                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="th_type" invisible="1"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                        <field name="state" invisible="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="th_application_forms_action" model="ir.actions.act_window">
        <field name="name">Đơn từ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">th.attachment</field>
        <field name="context">{'default_th_type': 'application_forms'}</field>
        <field name="domain">[('th_type', '=','application_forms')]</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="th_regulations_action" model="ir.actions.act_window">
        <field name="name">Quy định - Quy chế</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">th.attachment</field>
        <field name="context">{'default_th_type': 'regulations'}</field>
        <field name="domain">[('th_type', '=','regulations')]</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
