<?xml version="1.0" encoding="utf-8"?>
<odoo>

         <!--  Partners inherited form -->
        <record id="th_view_task_partner_info_form" model="ir.ui.view">
            <field name="name">res.partner.task.buttons</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="7"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action" name="%(th_project_task_action_from_partner)d"
                        groups="th_project_itc.th_group_project_user"
                        context="{'search_default_partner_id': active_id, 'default_partner_id': active_id}" attrs="{'invisible': [('th_task_count', '=', 0)]}"
                        icon="fa-tasks">
                        <field  string="Tasks" name="th_task_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
       </record>

</odoo>
