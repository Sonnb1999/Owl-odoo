<odoo>
    <record id="th_link_tracker_view_form" model="ir.ui.view">
        <field name="name">th.link.tracker.view.form.inherit</field>
        <field name="model">link.tracker</field>
        <field name="inherit_id" ref="link_tracker.link_tracker_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='utm']//field[@name='source_id']" position="after">
                <field name="th_partner_id"/>
                <field name="th_closing_work" invisible="1"/>
            </xpath>
            <xpath expr="//group" position="after">
                <notebook>
                    <page string="Link bài đăng">
                        <field name="th_post_link_ids" options="{'delete': [('th_closing_work', '!=', True)],
                        'create': [('th_closing_work', '!=', True)]}" attrs="{'readonly': [('th_closing_work', '=', True)]}">
                            <tree string="Record post link" class="th_post_link" editable="bottom" no_open="1">
                                <field name="name" widget="url" style="width: 100px !important;"/>
                                <field name="partner_id"/>
                                <field name="link_tracker_id" invisible="1"/>
                                <field name="create_date" string="Ngày tạo" widget="date"/>
                                <field name="state"/>
                                <field name="th_seeding_acceptance_id"/>
                                <field name="th_pay"/>
                            </tree>
                        </field>
                        <group name="th_total_cost" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <div class="oe_right">
                                <button name="action_closing_work" class="btn btn-primary" type="object" string="Chốt chi phí" />
                            </div>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="th_total_cost">
                                <field name="th_total_cost" nolabel="1" colspan="2" readonly="1"/>
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </page>
                </notebook>
            </xpath>
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="th_post_link_form" model="ir.ui.view">
        <field name="name">th.post.link</field>
        <field name="model">th.post.link</field>
        <field name="arch" type="xml">
            <form string="Link bài đăng" create="0" delete="0" write="0">
                <sheet>
                    <group>
                        <field name="name" widget="url" readonly="1"/>
                        <field name="partner_id"/>
                        <field name="create_date" string="Ngày tạo" widget="date"/>
                        <field name="state" readonly="true"/>
                        <field name="th_pay"/>
                        <field name="th_seeding_acceptance_id" readonly="true"/>
                        <field name="th_note"/>
                    </group>
                </sheet>
            </form>
        </field>
     </record>

    <record id="th_post_link_action" model="ir.actions.act_window">
        <field name="name">th.post.link.action</field>
        <field name="res_model">th.post.link</field>
        <field name="view_mode">form</field>
    </record>
</odoo>