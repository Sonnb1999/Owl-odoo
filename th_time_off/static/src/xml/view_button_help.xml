<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<!--  Calendar Holidays -->
    <t t-name="th_helpcontent_feedback.hr_holidays.CalendarController.controlButtons" t-inherit="hr_holidays.CalendarController.controlButtons" t-inherit-mode="extension" owl="1">
        <xpath expr="//span[hasclass('o_timeoff_buttons')]" position="after">
            <span>
                <button t-if="isInvisibleHelp" type="button" class="btn btn-secondary o_btn_help_content ms-1" title="Help User Manual" t-on-click="onClickHelp">
                    <i class="fa fa-book"/>
                </button>
                <button  t-if="isInvisibleFeedback" type="button" class="btn btn-secondary o_btn_feedback ms-1" title="Feedback" t-on-click="onClickFeedback">
                    <i class="fa fa-bell"/>
                </button>
            </span>
        </xpath>
    </t>
</templates>