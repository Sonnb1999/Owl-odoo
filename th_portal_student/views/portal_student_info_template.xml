<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Portal menu student info-->
    <!-- view get student  info -->
    <template id="th_list_get_student_info" name="Thông tin sinh viên">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True" class="me-3"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Thông tin sinh viên</t>
            </t>

			<t t-set="head">
			   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />
                <link href="/th_portal_student/static/src/css/file_info.css" rel="stylesheet"/>
            </t>
			<div class="container">
				<div class="row">
					<div class="col-12">
						<!-- Form START -->
						<form class="file-upload">
							<div class="row mb-5 gx-5">
								<!-- Contact detail -->
								<t t-if="data">
									<div class="col-xxl-8 mb-5 mb-xxl-0">
										<div class="bg-white px-4 py-5 rounded">
											<div class="row g-3">
												<!-- Họ và Tên -->
												<div class="col-md-12">
													<label class="form-label">Họ và Tên</label>
													<input type="text" class="form-control" placeholder=""
														   aria-label="First name" readonly="1"
														   t-att-value="data['name']"/>
												</div>
												<!-- Mã sinh viên -->
												<div class="col-md-6">
													<label class="form-label">Mã sinh viên</label>
													<input type="text" class="form-control" placeholder=""
														   aria-label="Last name" readonly="1"
														   t-att-value="data['student_code']"/>
												</div>
												<!-- Số điện thoại -->
												<div class="col-md-6">
													<label class="form-label">Số điện thoại</label>
													<input type="text" class="form-control" placeholder=""
														   aria-label="Phone number" readonly="1"
														   t-att-value="data['phone']"/>
												</div>
												<!-- Email -->
												<div class="col-md-6">
													<label class="form-label">Email</label>
													<input type="text" class="form-control" placeholder=""
														   aria-label="Phone number" readonly="1"
														   t-att-value="data['email']"/>
												</div>
												<!-- Ngày Sinh -->
												<div class="col-md-6">
													<label for="inputEmail4" class="form-label">Ngày Sinh</label>
													<input type="text" class="form-control" id="inputEmail4"
														   readonly="1" t-att-value="data['birthday']"/>
												</div>
												<!-- Giới tính -->
												<div class="col-md-6">
													<label for="inputEmail4" class="form-label">Giới tính</label>
													<input type="text" class="form-control" id="inputEmail4"
														   readonly="1" t-att-value="data['gender']"/>
												</div>

												<!-- Nơi sinh -->
												<div class="col-md-6">
													<label for="inputEmail4" class="form-label">Nơi sinh</label>
													<input type="text" class="form-control" id="inputEmail4"
														   readonly="1" t-att-value="data['place_of_birth']"/>
												</div>

												<!-- Nơi sinh -->
												<div class="col-md-6">
													<label for="inputEmail4" class="form-label">Quyết định trúng tuyển
													</label>
													<input type="text" class="form-control" id="inputEmail4"
														   readonly="1" t-att-value="data['acceptance']"/>
												</div>

												<!-- Nơi sinh -->
												<div class="col-md-6">
													<label for="inputEmail4" class="form-label">Ngành đăng ký học
													</label>
													<input type="text" class="form-control" id="inputEmail4"
														   readonly="1" t-att-value="data['major']"/>
												</div>

											</div> <!-- Row END -->
										</div>
									</div>

									<div class="col-xxl-4">
									<div class="bg-secondary-soft px-4 py-5 rounded">
										<div class="row g-3">
											<div class="text-center">
												<!-- Image upload -->
												<div class="square position-relative mb-3">
													<i class="fas fa-fw fa-user position-absolute top-50 start-50 translate-middle text-secondary"></i>
												</div>
												<!-- Button -->
												<input type="file" id="customFile" name="file" hidden=""/>
											</div>
										</div>
									</div>
								</div>
								</t>
								<t t-else="">
									<div class="col-xxl-12 mb-5 mb-xxl-0">
										<div class="bg-white px-4 py-5 rounded">
											<h4 class="text-center">
												Hiện tại không có dữ liệu về bạn
											</h4>
										</div>
									</div>
								</t>
								<!-- Upload profile -->
							</div>
						</form>
					</div>
				</div>
			</div>
		</t>
    </template>


</odoo>
