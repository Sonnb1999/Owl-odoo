<odoo>
    <record id="task_approve_wizard_view_form" model="ir.ui.view">
        <field name="name">task_approve_wizard_view_form</field>
        <field name="model">th.approve.pay.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="th_type"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Xác nhận" name="th_action_approve_wizard" type="object" class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Hủy" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

     <record id="task_approve_wizard_action" model="ir.actions.act_window">
        <field name="name">Yêu cầu phê duyệt</field>
        <field name="res_model">th.approve.pay.wizard</field>
        <field name="binding_model_id" ref="th_project_itc.model_th_project_task"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>