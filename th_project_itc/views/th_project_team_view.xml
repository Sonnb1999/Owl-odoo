<odoo>
    <record id="th_project_team_view_tree" model="ir.ui.view">
        <field name="name">th_project_team_view_tree</field>
        <field name="model">th.project.team</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="th_member_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="th_project_team_view_form" model="ir.ui.view">
        <field name="name">th_project_team_view_form</field>
        <field name="model">th.project.team</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title" style="width:40%">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Tên đội..."/>
                        </h1>
                    </div>
                    <group>
                        <field name="th_team_type" style="width:60%" required="1"/>
                        <field name="th_manager_id" style="width:60%"/>
                    </group>
                    <notebook>
                        <page string="Thành viên">
                            <field name="th_member_ids" mode="kanban" class="w-100">
                                <kanban delete="0" create="0">
                                    <field name="id"/>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="avatar_128"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <a type="delete"
                                               style="position: absolute; right: 0; padding: 4px; display: inline-block; color:black;"
                                               class="fa fa-times"><span style="display:none">x</span>
                                            </a>
                                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                                <div class="o_kanban_card_content d-flex">
                                                    <div>
                                                        <img t-att-src="kanban_image('res.users', 'avatar_128', record.id.raw_value)"
                                                             class="o_kanban_image o_image_64_cover" alt="Avatar"/>
                                                    </div>
                                                    <div class="oe_kanban_details d-flex flex-column ms-3">
                                                        <strong class="o_kanban_record_title oe_partner_heading">
                                                            <field name="name"/>
                                                        </strong>
                                                        <div class="d-flex align-items-baseline text-break">
                                                            <i class="fa fa-envelope me-1" role="img" aria-label="Email"
                                                               title="Email"/>
                                                            <field name="email"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="th_project_team_view_act" model="ir.actions.act_window">
        <field name="name">Đội nhóm</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">th.project.team</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="th_project_team_view_menu" name="Đội nhóm" parent="th_project_itc.th_menu_project_config" action="th_project_team_view_act" sequence="9" groups="base.group_no_one"/>
</odoo>