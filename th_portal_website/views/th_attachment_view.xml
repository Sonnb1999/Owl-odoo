<odoo>

    <record id="th_attachment_view_tree" model="ir.ui.view">
        <field name="name">th_attachment_view_tree</field>
        <field name="model">th.attachment</field>
        <field name="arch" type="xml">
            <tree string="th_attachment_tree">
                <field name="name"/>
                <field name="attachment_ids"/>
            </tree>
        </field>
    </record>

    <record id="th_attachment_view_form" model="ir.ui.view">
        <field name="name">th_attachment_view_form</field>
        <field name="model">th.attachment</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="th_attachment_action" model="ir.actions.act_window">
        <field name="name">th_attachment_action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">th.attachment</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
