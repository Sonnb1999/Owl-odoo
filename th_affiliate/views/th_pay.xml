<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="th_pay_view" model="ir.ui.view">
        <field name="name">th.pay</field>
        <field name="model">th.pay</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="th_partner_id"/>
                <field name="th_paid_date"/>
                <field name="th_paid"/>
            </tree>
        </field>
    </record>

    <record id="th_pay_form_view" model="ir.ui.view">
        <field name="name">th.pay.form</field>
        <field name="model">th.pay</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button name="action_pending_pay" class="btn" type="object" groups="base.group_no_one" string="Chờ duyệt" states="pending,accept,paid,cancel"/>
                    <button name="action_cancel_pay" class="btn" type="object" string="Hủy" states="pending,accept"/>
                    <button name="action_accept_pay" class="btn btn-primary" type="object" string="Duyệt" states="pending"/>
                    <button name="th_action_paid" class="btn btn-primary" type="object" string="Thanh toán" states="accept"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,paid"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="th_partner_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="th_count_correct_link" readonly="1"/>
                            <field name="th_paid" readonly="1"/>
                            <field name="th_paid_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Link bài đăng">
                            <field name="th_post_link_ids" options="{'delete': [('state','=', 'pending')]}">
                                <tree string="Record post link" class="th_post_link" create="0" no_open="True"  editable="bottom">
                                    <button name="action_visit_page" type="object" string="Link" icon="fa-external-link"/>
                                    <field name="th_acceptance_person_id"/>
                                    <field name="create_date" string="Ngày tạo" widget="date"/>
                                    <field name="state"/>
                                    <field name="th_seeding_acceptance_ids" widget="many2many_tags"/>
                                    <field name="th_expense"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="th_pay_action" model="ir.actions.act_window">
        <field name="name">Phiếu thanh toán</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">th.pay</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
          </p>
        </field>
    </record>
</odoo>