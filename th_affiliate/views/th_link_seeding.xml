<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="th_view_link_seeding_tree" model="ir.ui.view">
        <field name="name">th_view_link_seeding_tree</field>
        <field name="model">th.link.seeding</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="th_product_aff_id"/>
                <field name="th_url"/>
                <field name="campaign_id"/>
                <field name="medium_id"/>
                <button name="action_create_link_tracker" string="Tạo Link Seeding" type="object" class="oe_highlight" title="Create Link"/>
            </tree>
        </field>
    </record>

    <record id="th_view_link_seeding_form" model="ir.ui.view">
        <field name="name">th_view_link_seeding_form</field>
        <field name="model">th.link.seeding</field>
        <field name="arch" type="xml">
            <form string="Form">
                <header> <button name="action_create_link_tracker" string="Tạo Link Seeding" type="object" class="oe_highlight" title="Create Link"/></header>
                <sheet>
                    <field name="th_image"  widget='image' class="oe_avatar" options='{"zoom": true}'/>
                    <group>
                        <group>
                            <field name="th_aff_category_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
                            <field name="th_product_aff_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            <field name="th_number_of_requests"/>
                            <field name="th_url" invisible="1"/>
                            <field name="th_aff_ownership_unit_id"/>
                        </group>
                        <group>
                            <field name="campaign_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                            <field name="medium_id"/>
<!--                            <field name="th_medium_ids" widget="many2many_tags"/>-->
                            <field name="th_filename" invisible="1"/>
                            <field name="th_image" string="Tải ảnh xuống" filename="th_filename" readonly="1" class="oe_avatar" attrs="{'invisible': [('th_image', '=', False)]}" widget="work_permit_upload"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Yêu cầu" name="th_request">
                           <field name="th_request" placeholder="Add an internal note..." nolabel="1" height="50"/>
                        </page>
                    </notebook>
                </sheet>
                 <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="th_action_link_seeding" model="ir.actions.act_window">
        <field name="name">Giao bài</field>
        <field name="res_model">th.link.seeding</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('th_view_link_seeding_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('th_view_link_seeding_form')})]"/>
    </record>

</odoo>