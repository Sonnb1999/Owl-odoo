<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">th.res.config.settings.view.form.inherit.api</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='companies']" position="after">
                    <h2>API</h2>
                    <div class="row mt16 o_settings_container" name="vps_setting_container" groups="base.group_no_one">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <label class="mr-3" for="th_url_server" string="URL server"/>:
                                        <field name="th_url_server" class="oe_inline"/>
                                        <br/>
                                        <label class="mr-3" for="th_db" string="DataBase"/>:
                                        <field name="th_db" class="oe_inline"/>
                                        <br/>
                                        <label class="mr-3" for="th_user" string="Tài khoản"/>:
                                        <field name="th_user" class="oe_inline"/>
                                        <br/>
                                        <label class="mr-3" for="th_password" string="Mật khẩu"/>:
                                        <field name="th_password" class="oe_inline" password="True"/>
                                    </div>
                                </div>
                            </div>
                    </div>
                </xpath>
            </field>
        </record>
</odoo>
